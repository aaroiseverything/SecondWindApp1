<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GenerateExerciseTwoFragment">

    <FrameLayout
        android:id="@+id/flYoutube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center|left"
            android:text="Workout Configuration"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="421dp">

            <TextView
                android:id="@+id/available"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center|left"
                android:text="Time available for workout"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="82dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="109dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/available"
                android:text="60 min" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="336dp"
                android:layout_height="30dp"
                android:layout_below="@+id/available"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="35dp"
                android:indeterminate="false"
                android:max="90"
                android:progress="60"
                android:progressTint="#232020" />

            <TextView
                android:id="@+id/available2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBar2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:gravity="center|left"
                android:text="Perceived fatigue before workout"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBar2"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="106dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/available2"
                android:text="4 /10" />

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="364dp"
                android:layout_height="30dp"
                android:layout_below="@+id/available2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="13dp"
                android:progress="40"
                android:progressTint="#171515" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="122dp"
                android:layout_height="35dp"
                android:layout_below="@+id/seekBar3"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="248dp"
                android:text="Equipment" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:layout_below="@+id/textView9"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="7dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:text="No equipment" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/textView10"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Home Gym" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView13"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Small gym" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/textView15"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Large gym" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/textView12"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Medium gym" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/textView11"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Outdoor/ park gym" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/checkBox"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/checkBox2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/checkBox5"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/checkBox4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/checkBox3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp" />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/doneBtn"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/btn_background"
        android:minHeight="45dp"
        android:text="done"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:visibility="visible" />
</LinearLayout>
